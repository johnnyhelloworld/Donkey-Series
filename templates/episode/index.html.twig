{% extends 'base.html.twig' %}

{% block title %}All episodes{% endblock %}

{% block body %}
<div class="container my-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Nombre</th>
                <th>Résumé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.sypnosis }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-outline-danger" href="{{ path('episode_show', {'id': episode.id}) }}">Détails</a>
                        <a class="btn btn-outline-danger" href="{{ path('episode_edit', {'id': episode.id}) }}">Éditer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('episode_new') }}">Créer une nouvelle épisode</a>

</div>
{% endblock %}
