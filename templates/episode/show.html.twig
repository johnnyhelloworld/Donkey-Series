{% extends 'base.html.twig' %}

{% block title %}Episode #{{ episode.id }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5 text-center">Episode #{{ episode.id }}</h1>
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.sypnosis }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('episode_edit', {'id': episode.id}) }}">Edit</a>  
        {{ include('episode/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
