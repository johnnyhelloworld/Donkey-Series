{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <div class="container my-3">
        <h1>All categories : </h1>
        <div class="row">
            <div class="col-6">
                <ul class="list-group">
                    {% for category in categories %}
                        <li class="list-group-item">
                            <div>
                                {{ category.name }}
                            </div>
                                {# Lien vers la fiche de la série : #}
                            <div>
                                <a class="btn btn-danger btn-sm" href="{{ path("category_show", { categoryName: category.name }) }}">Details</a>
                            </div>
                        </li>
                        {% else %}
                        Aucune catégorie trouvée.
                        {% endfor %}
                    </ul>
                </div>
            </div>
        <div>
            <a class="btn btn-primary btn-sm my-4" href="{{ path("category_new") }}">Create a new category</a>
        </div>
    </div>
{% endblock %}
