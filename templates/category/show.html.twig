{% extends 'base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Toutes les séries de la catégorie {{ category.name }}:</h1>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Résumé</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for program in programs %}
                        <tr>
                            <td>{{ program.id }}</td>
                            <td>{{ program.title }}</td>
                            <td>{{ program.summary }}</td>
                            <td><a class="btn btn-danger" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a></td>
                        </tr>
                    {% else %}
                        Aucune série trouvée.
                    {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-outline-primary" href="{{ path('program_index') }}">
                Retour à l'acceuil
            </a>
    </div>
{% endblock %}