{% extends 'base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">All programs in the category {{ category.name }} :</h1>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Synopsis</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for program in programs %}
                        <tr>
                            <td>{{ program.id }}</td>
                            <td>{{ program.title }}</td>
                            <td>{{ program.summary }}</td>
                            <td><a class="btn btn-danger" href="{{ path("program_show", { id: program.id }) }}">Details</a></td>
                        </tr>
                    {% else %}
                        Aucune série trouvée.
                    {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-primary" href="{{ path('program_index') }}">
                Back to homepage
            </a>
    </div>
{% endblock %}