{% extends 'base.html.twig' %}

{% block title %}{{ program.title }} {{ program.id}} {% endblock %}

{% block body %}
<div class="container my-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.number }}</td>
                    <td>{{ episode.title }}</td>
                    <td>{{ episode.sypnosis }}</td>
                    <td><a class="btn btn-danger" href="{{ path("program_episode_show", { programId:program.id, seasonId:season.id, episodeId:episode.id }) }}">Détails</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-primary" href="{{ path('program_index') }}">
        Retour à la liste des programmes'
    </a>
</div>
{% endblock %}