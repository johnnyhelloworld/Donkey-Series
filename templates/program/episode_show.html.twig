{% extends 'base.html.twig' %}

{% block title %}Episode #{{ program.id }}{% endblock %}

{% block body %}
<div class="container my-3">
    <div class="media text-center">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <ul class="list-group my-3">
            <li class="list-group-item">
                <div>Program Title : {{ program.title}} </div>
            </li>
            <li class="list-group-item">
                <div>Season Number : {{ season.number }} </div>
            </li>
            <li class="list-group-item">
                <div>Episode Number {{ episode.number}} </div>
            </li>
            <li class="list-group-item">
                <div>Episode Title : {{ episode.title }} </div>
            </li>
            <li class="list-group-item">
                <div>Episode Synopsis : {{ episode.sypnosis }} </div>
            </li>
        </ul>
    </div>
    <a class="btn btn-primary" href="{{ path('program_index') }}">
        Back to the list of programs
    </a>
</div>
{% endblock %}