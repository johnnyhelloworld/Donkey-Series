{% extends 'base.html.twig' %}

{% block title %}All Seasons{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-5">All Seasons</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Number</th>
                <th>Year</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('season_show', {'id': season.id}) }}">Details</a>
                    <a class="btn btn-danger" href="{{ path('season_edit', {'id': season.id}) }}">Edit</a>
                </td> 
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('season_new') }}">Create a new season</a>
</div>
{% endblock %}
