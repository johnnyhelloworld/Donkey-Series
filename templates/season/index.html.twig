{% extends 'base.html.twig' %}

{% block title %}All Seasons{% endblock %}

{% block body %}
<div class="container my-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Année</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('season_show', {'id': season.id}) }}">Détails</a>
                    <a class="btn btn-danger" href="{{ path('season_edit', {'id': season.id}) }}">Éditer</a>
                </td> 
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-primary" href="{{ path('season_new') }}">Créer une nouvelle saison</a>
</div>
{% endblock %}
