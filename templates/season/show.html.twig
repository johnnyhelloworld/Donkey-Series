{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.id }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Saison #{{ season.id }}</h1>
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a class="btn btn-outline-primary" href="{{ path('season_edit', {'id': season.id}) }}">Éditer</a>
        {{ include('season/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
